<%= render 'partials/banner' %>
<div class="index-wrapper">
  <h1 id="workouts" class="text-center" style="margin-top: 0px;">Browse workouts</h1>
  <div class="index-main-container">
    <div class="index-card-grid">
      <% @workouts.each do |workout| %>
        <div class="col col-xs-12 col-sm-12 col-md-4">
          <%= render 'index_card', workout: workout %>
        </div>
      <% end %>
    </div>
    <div class="index-map">
      <div id="map" style="width: 100%; height: 600px;" data-markers="<%= @markers.to_json %>"></div>
    </div>
  </div>
</div>